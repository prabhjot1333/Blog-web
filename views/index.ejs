<%- include("partials/header.ejs") %>
<!-- header top -->

<div class="container col-xxl-8 px-4 py-5">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
      <div class="col-10 col-sm-8 col-lg-6">
        <img src="images/reader.jpg" class="d-block mx-lg-auto img-fluid rounded" alt="" width="700" height="500" loading="lazy">
      </div>
      <div class="col-lg-6">
        <h1 class="display-5 fw-bold text-white mb-3">Journey Through Words</h1>
        <p class="text-white">Books are bridges to new perspectives, windows to endless wonders.</p>
      </div>
    </div>
  </div>

<!-- Blog area -->

<div class="album py-5 bg-body-dark">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        
        <% if(locals.blogPosts) { %>
          <% for (let i = 0; i < blogPosts.length; i++) { %>
            <div class="col">
                <div class="card border border-white">
                    <img class="rounded" src="images/blog.jpg" alt="">
                    <div class="card-body">
                        <p class="card-text"><%= blogPosts[i].heading %></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/view1">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          <% } %>
        <% } else { %>
        <% for(let i = 1; i <= 9; i++) { %>
          <div class="col">
              <div class="card border border-white">
                <img class="rounded" src="images/blog.jpg" alt="">
                <div class="card-body">
                  <p class="card-text">Blog Post <%= i %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a href="/view?post=<%= i %>">
                      <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          <% } %>

    </div>
  </div>




<div class="divider"></div>

  <!-- footer -->
<%- include("partials/footer.ejs") %>